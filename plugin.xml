<?xml version="1.0" encoding="utf-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android" id="cordova-plugin-hybridrtc" version="0.0.1">
  <name>HybridRtcPlugin</name>
  <dependency id="cordova-plugin-cocoapod-support"/>
  <js-module name="HybridRtcPlugin" src="www/HybridRtcPlugin.js">
    <clobbers target="cordova.plugins.HybridRtcPlugin"/>
  </js-module>
  <platform name="ios">
    <config-file parent="/*" target="config.xml">
      <feature name="HybridRtcPlugin">
        <param name="ios-package" value="HybridRtcPlugin"/>
      </feature>
    </config-file>

    <config-file parent="NSAppTransportSecurity" target="*-Info.plist">
        <dict>
            <key>NSAllowsArbitraryLoads</key>
            <true/>
        </dict>
    </config-file>
    <config-file parent="NSCameraUsageDescription" target="*-Info.plist">
        <string>需要使用相机</string>
    </config-file>
    <config-file parent="NSMicrophoneUsageDescription" target="*-Info.plist">
        <string>需要使用麦克风</string>
    </config-file>

